<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jpareja.campusmovil.DatosActivity">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff113b95"
        android:id="@+id/imgVwlogo"
    />

    <TextView
        android:id="@+id/txtVwBienvenido"
        android:text="@string/Bienvenido"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffe2ac1c"
        android:capitalize="words"
        android:textColor="#ff050608"
        android:textSize="18dp"
        android:layout_below="@+id/imgVwlogo"
        android:layout_alignLeft="@+id/imgVwlogo"
        android:layout_alignStart="@+id/imgVwlogo"/>

    <RelativeLayout
        android:id="@+id/marcodatos"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/txtVwBienvenido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foto"
            android:layout_alignRight="@+id/btnCambiaFoto"
            android:layout_alignEnd="@+id/btnCambiaFoto"
            android:layout_alignBottom="@+id/txtVwCarrera"
            android:layout_alignTop="@+id/txtVwCedula" />
        <TextView
            android:id="@+id/txtVwCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Cedula"
            android:layout_margin="5dp"
            android:background="#ff113b95"
            android:layout_above="@+id/edtCedula"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
            />
        <TextView
            android:id="@+id/edtCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Cedula"
            android:layout_margin="5dp"
            android:layout_above="@+id/txtVwNombre"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
        />
        <TextView
            android:id="@+id/txtVwNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Nombres"
            android:layout_margin="5dp"
            android:background="#ff113b95"
            android:layout_above="@+id/edtNombre"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
            />
        <TextView
            android:id="@+id/edtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Nombres"
            android:layout_margin="5dp"
            android:layout_above="@+id/txtVwApellidos"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
        />
        <TextView
            android:id="@+id/txtVwApellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Apellidos"
            android:background="#ff113b95"
            android:layout_margin="5dp"
            android:layout_above="@+id/edtApellidos"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
            />
        <TextView
            android:id="@+id/edtApellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Apellidos"
            android:layout_margin="5dp"
            android:layout_above="@+id/txtVwCarrera"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
        />

        <TextView
            android:id="@+id/txtVwCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Carrera"
            android:layout_margin="5dp"
            android:background="#ff113b95"
            android:layout_above="@+id/edtCarrera"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
        />
        <TextView
            android:id="@+id/edtCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Carrera"
            android:layout_margin="5dp"
            android:layout_alignTop="@id/btnCambiaFoto"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btnCambiaFoto"
        />
        <Button
            android:id="@+id/btnCambiaFoto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cambiar Foto"
            android:layout_margin="5dp"
            android:layout_above="@+id/imgVwseparador1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/imgVwseparador1"
            android:src="@drawable/separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
        />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/marcobotones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/marcodatos"
            android:background="#FFFFFF"
            >
        <ImageButton
            android:id="@+id/imgBtnAcademico"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:src="@drawable/academicoestudiante"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"
        />
        <ImageButton
            android:id="@+id/imgBtnFinanciero"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:src="@drawable/finaciero"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_alignTop="@+id/imgBtnAcademico"
            android:layout_toRightOf="@+id/imgBtnAcademico"
            android:layout_toEndOf="@+id/imgBtnAcademico"
        />


        </RelativeLayout>

</RelativeLayout>
