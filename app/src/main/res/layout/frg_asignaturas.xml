<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jpareja.campusmovil.NotasActActivity">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff113b95"
        android:id="@+id/imgVwlogo" />

    <TextView
        android:id="@+id/txtVwNotas"
        android:text="@string/titnostasactuales"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffe2ac1c"
        android:capitalize="words"
        android:textColor="#ff050608"
        android:textSize="18dp"
        android:layout_below="@+id/imgVwlogo"
        android:layout_alignLeft="@+id/imgVwlogo"
        android:layout_alignStart="@+id/imgVwlogo"
        />

    <TextView
        android:id="@+id/txtVwAsignatura"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="#fff0ce6e"
        android:text="Asignatura"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/txtVwNotas"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVwPromedio"
        android:textSize="18dp"
        android:background="#fff0ce6e"
        android:text="Promedio"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/txtVwNotas"
        android:layout_toRightOf="@id/txtVwAsignatura"
        />

    <ListView
        android:id="@+id/lstVwAsignaturas"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:background="#ffe2e2e2"
        android:layout_margin="5dp"
        android:layout_below="@+id/txtVwAsignatura"
        android:layout_alignParentStart="true"
        />
    <ListView
        android:id="@+id/lstVwPromedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@+id/txtVwAsignatura"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignStart="@+id/txtVwPromedio" />


</RelativeLayout>
