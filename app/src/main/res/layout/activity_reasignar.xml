<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jpareja.campusmovil.ReasignarActivity">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff113b95"
        android:id="@+id/imgVwlogo"
    />

    <TextView
        android:id="@+id/txtVwReasignar"
        android:text="@string/titreasignar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffe2ac1c"
        android:capitalize="words"
        android:textColor="#ff050608"
        android:textSize="18dp"
        android:layout_below="@+id/imgVwlogo"
        android:layout_alignLeft="@+id/imgVwlogo"
        android:layout_alignStart="@+id/imgVwlogo"
    />
    <RelativeLayout
        android:id="@+id/marcoreasignar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:layout_below="@id/txtVwReasignar">

        <TextView
            android:id="@+id/txtVwCambioUsuario"
            android:layout_width="122dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Usuario"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ff113b95"

        />
        <EditText
            android:id="@+id/edtcambiousuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Digite Su Usuario"
            android:layout_alignTop="@+id/txtVwCambioUsuario"
            android:layout_alignLeft="@+id/edtNuevaClave"
            android:layout_alignStart="@+id/edtNuevaClave" />
        <TextView
            android:id="@+id/txtVwNuevaClave"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Nueva Contrase単a"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ff113b95"
            android:layout_below="@id/edtcambiousuario"
        />
        <EditText
            android:id="@+id/edtNuevaClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Nueva Contrase単a"
            android:layout_below="@id/edtcambiousuario"
            android:layout_toRightOf="@id/txtVwNuevaClave"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txtVwConfirmarClave"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Corfirmar Contrase単a"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ff113b95"
            android:layout_below="@+id/txtVwNuevaClave"

            />
        <EditText
            android:id="@+id/edtConfirmarClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="Confirmar Contrase単a"
            android:layout_toRightOf="@+id/txtVwNuevaClave"
            android:layout_below="@+id/edtNuevaClave"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/imgVwseparareasignar1"
            android:src="@drawable/separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtVwConfirmarClave"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/btnCambiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Cambiar"
            android:layout_below="@id/imgVwseparareasignar1"
            android:layout_margin="20dp"
        />
        <ImageView
            android:id="@+id/imgVwseparareasignar2"
            android:src="@drawable/separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCambiar"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>





</RelativeLayout>
